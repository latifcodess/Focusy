{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.focusy.focusy",
  "productName": "Focusy",
  "version": "1.0.0",

  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },

  "app": {
    "windows": [
      {
        "title": "Focusy",
        "width": 400,
        "height": 500,
        "resizable": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/128x128.png",
      "icons/256x256.png"
    ],
    "windows": {
      "allowDowngrades": true
    }
  }
}
